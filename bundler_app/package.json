{
  "name": "tone-matching-bundler",
  "version": "2.0.0",
  "description": "Desktop app for creating tone matching bundles",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "debug": "ELECTRON_ENABLE_LOGGING=1 electron --remote-debugging-port=9223 .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac dmg --universal --publish never",
    "build:win": "electron-builder --win nsis --publish never",
    "build:linux": "electron-builder --linux AppImage",
    "build:all": "electron-builder -m -w"
  },
  "keywords": [
    "phonology",
    "tone",
    "linguistics"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "archiver": "^6.0.1",
    "fast-xml-parser": "^4.3.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.6.4",
    "adm-zip": "^0.5.10"
  },
  "build": {
    "appId": "com.tonematching.bundler",
    "productName": "Tone Matching Bundler",
    "directories": {
      "output": "../dist/bundler"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "generateUpdatesFilesForAllChannels": false,
    "removePackageScripts": true,
    "files": [
      "src/**/*",
      "public/**/*",
      "src/utils/lite-normalizer.js"
    ],
    "extraResources": [
      {
        "from": "win32-resources/ffmpeg-static.zip",
        "to": "win32-resources/ffmpeg-static.zip",
        "filter": ["ffmpeg-static.zip"]
      }
    ],
    "afterPack": "scripts/afterPack.cjs",
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "installerIcon": "build/installer-icon.ico",
      "uninstallerIcon": "build/installer-icon.ico",
      "installerHeaderIcon": "build/installer-icon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "include": "build/installer.nsh"
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
